<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @test.Sku %></h1>
    <a href="<%= url_for :action => :show, :id => @test.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @test.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @test.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="test[Sku]" class="fieldLabel">Sku</label>
            <input type="text" id="test[Sku]" name="test[Sku]" value="<%= @test.Sku %>" <%= placeholder( "Sku" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="test[Product]" class="fieldLabel">Product</label>
            <input type="text" id="test[Product]" name="test[Product]" value="<%= @test.Product %>" <%= placeholder( "Product" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
