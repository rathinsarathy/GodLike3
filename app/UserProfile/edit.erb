<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @userprofile.FirstName %></h1>
    <a href="<%= url_for :action => :show, :id => @userprofile.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @userprofile.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @userprofile.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="userprofile[FirstName]" class="fieldLabel">Firstname</label>
            <input type="text" id="userprofile[FirstName]" name="userprofile[FirstName]" value="<%= @userprofile.FirstName %>" <%= placeholder( "Firstname" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="userprofile[LastName]" class="fieldLabel">Lastname</label>
            <input type="text" id="userprofile[LastName]" name="userprofile[LastName]" value="<%= @userprofile.LastName %>" <%= placeholder( "Lastname" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="userprofile[Image]" class="fieldLabel">Image</label>
            <input type="text" id="userprofile[Image]" name="userprofile[Image]" value="<%= @userprofile.Image %>" <%= placeholder( "Image" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
