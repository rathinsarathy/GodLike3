<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @userprofile.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @userprofile.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="userprofile[FirstName]" class="fieldLabel">Firstname</label>
            <input type="text" id="userprofile[FirstName]" name="userprofile[FirstName]" <%= placeholder("Firstname") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="userprofile[LastName]" class="fieldLabel">Lastname</label>
            <input type="text" id="userprofile[LastName]" name="userprofile[LastName]" <%= placeholder("Lastname") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="userprofile[Image]" class="fieldLabel">Image</label>
            <input type="text" id="userprofile[Image]" name="userprofile[Image]" <%= placeholder("Image") %> />
 
           
          </div>
      

      <input type="submit" value="Register"/>
    </form>
  </div>

</div>
